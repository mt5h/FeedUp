<div class="container">
	<h2><%= __('edit_profile') %></h2>
	<form id="edit-user" action="auth/update" method="post">
		<div class="row">
		<div class="input-field col s12 m12 l12">
			<span><%= __('choose_avatar')%></span>
			<select name="avatar" form="edit-user">
				<% avatars.forEach(function(avatar){%>
					<option value="<%= avatar %>" data-img-src="/images/avatars/<%= avatar %>"></option>
				<% }); %>
			</select>
		</div>
	</div>
	<div class="row">
			<div class="input-field col s6 m6 l6">
				<i class="material-icons prefix">account_circle</i>
				<input name="username" id="username" type="text" class="validate" value="<%= user.username %>">
				<label for="username">Username</label>
			</div>

		<div class="input-field col s6 m6 l6">
			<i class="material-icons prefix">email</i>
			<input name="email" id="email" type="email" class="validate" value="<%= user.email %>">
			<label for="email"><%= __('email_address') %></label>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 m6 l6">
			<i class="material-icons prefix">lock</i>
			<input name="password" id="password" type="password" class="validate">
			<label for="password">Password</label>
		</div>
    <div class="input-field col s6 m6 l6">
			<i class="material-icons prefix">lock</i>
			<input name="password_check" id="password_check" type="password" class="validate">
			<label for="password"><%= __('password_confirm') %></label>
    </div>
  </div>

		<input class="btn orange" type="submit" value="<%= __('update') %>"/>
	</form>
</div>
